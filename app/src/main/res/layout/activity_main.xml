<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#fff"
            android:text="DASHBOARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="6dp"
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAMA"
                        android:textColor="@color/text"
                        android:textSize="14dp" />

                </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/cirCularImage"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="3"
                    app:civ_shadow_color="@color/text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="ID"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="JABATAN"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/jabatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="JABATAN"
                            android:textColor="@color/text"
                            android:textSize="12dp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:id="@+id/btnAbsent"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/face"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Absent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnProfile"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                        <ImageView

                            android:layout_marginTop="20dp"
                            android:src="@mipmap/data"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"/>


                        <TextView
                            android:textColor="@color/text"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:text="Data Pribadi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/holiday"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Cuti Tahunan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:id="@+id/btn_slip_gaji"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/slipgaji"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Slip Gaji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/sick"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Sakit dan Izin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/note"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Catatan Kehadiran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:id="@+id/btn_team"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/team"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Team Saya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/notice"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Pengumuman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/performance"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/rating"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Performance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:id="@+id/pengaturan"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/pengaturan"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Pengaturan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/notice"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Pengumuman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout

                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/pengaturan"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>


                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/text"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Pengaturan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </LinearLayout>






















        </LinearLayout>


        </ScrollView>









    </LinearLayout>





</RelativeLayout>